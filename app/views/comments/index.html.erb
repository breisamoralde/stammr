
<div class="stammr_post tile">
    <%= @random_stammr.content %>
</div>

<div class="stammr_post tile">
    <p id="notice">
        <%= notice %>
    </p>
    <div class="comment_form">
        <%= render 'form' %>
    </div>
</div>

<table>
    <thead>
    <tr>
        <th>Content</th>
        <th>Name</th>
        <th>Stammer post</th>
        <th>Date created</th>
    </tr>
    </thead>

    <tbody>
    <% @comments.each do |commentInstance| %>
        <tr>
            <td><%= commentInstance.content %></td>
            <td><%= commentInstance.name %></td>
            <td><%= commentInstance.stammr_post_id %></td>
            <td><%= commentInstance.date_created %></td>
        </tr>
    <% end %>
    </tbody>
</table>